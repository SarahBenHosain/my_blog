{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
   
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>ImgSrc</th>
                <th>Date</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td><img class='imgMiniatureAdmin' src="{{ asset('uploads/images/' ~ article.imgSrc) }}" alt="photo de l'article"></td>
                <td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
                <td>{{ article.contenu }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">voir</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="txt-nouveau">
     <a href="{{ path('app_article_new') }}">Cr√©er un nouveau</a>
    </div>
{% endblock %}
